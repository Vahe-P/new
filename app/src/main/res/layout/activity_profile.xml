<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#f5f5f5">


    <!-- User Info Section -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:id="@+id/userEmailTextViewLayout"
        android:layout_marginBottom="20dp">




        <TextView
            android:id="@+id/userEmailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/userEmailTextViewLayout"
        android:layout_margin="16dp"
        android:hint="Enter distance(default 5)"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="16sp" />




    <!-- Choosing Bars Section -->
    <LinearLayout
        android:id="@+id/choosingBars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="72dp"




        android:layout_below="@id/userEmailTextViewLayout"
        android:orientation="horizontal"
        android:gravity="center">




        <Spinner
            android:id="@+id/fromWhere"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:padding="8dp" />
    </LinearLayout>




    <!-- Log Out Button -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:backgroundTint="@color/login_button"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/bottomButtons"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>


    <!-- Bottom Navigation Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#DDDDDD"
        android:padding="8dp">


        <ImageButton
            android:id="@+id/discoverButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Discover"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_compass" />


        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Profile"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_myplaces" />
    </LinearLayout>


</RelativeLayout>

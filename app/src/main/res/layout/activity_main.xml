<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:background="#f5f5f5">


    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6290EE"
        android:padding="16dp"
        android:elevation="4dp">


        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@/custom_font"
            android:text="Wanderly"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </RelativeLayout>




    <GridLayout
        android:id="@+id/choosingBars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:layout_margin="16dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="16dp"
        android:columnCount="3"
        android:gravity="center"
        android:padding="8dp">


        <CheckBox
            android:id="@+id/checkChurches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Churches" />


        <CheckBox
            android:id="@+id/checkMuseums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Museums" />


        <CheckBox
            android:id="@+id/checkArtGalleries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Art Galleries" />


        <CheckBox
            android:id="@+id/checkParks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:text="Parks" />


        <CheckBox
            android:id="@+id/checkLibraries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Libraries" />
    </GridLayout>


    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choosingBars"
        android:layout_margin="16dp"
        android:text="Search"
        android:backgroundTint="@color/login_button"
        />


    <TextView
        android:id="@+id/recommendedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchButton"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Recommended"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium" />


    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recommendedText"
        android:orientation="vertical"
        android:layout_above="@id/bottomButtons">








        <TextView
            android:id="@+id/text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="#AAFFFFFF"
            android:padding="8dp"
            android:text="Coordinates will appear here"
            android:textColor="#000000" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">


            <LinearLayout
                android:id="@+id/resultsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#DDDDDD"
        android:padding="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">


        <ImageButton
            android:id="@+id/discoverButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Discover"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_compass" />


        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Profile"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_myplaces" />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:background="#f5f5f5">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6290EE"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@/custom_font"
            android:text="Wanderly"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </RelativeLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/topBar"
        android:layout_margin="16dp"
        android:hint="Enter radius"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="16sp" />

    <!-- Choosing Bars -->
    <LinearLayout
        android:id="@+id/choosingBars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="72dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Spinner for Numbers -->
        <Spinner
            android:id="@+id/numberSpinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp" />

        <!-- Spacer -->
        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <!-- Spinner for Categories -->
        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Recommended Section -->
    <TextView
        android:id="@+id/recommendedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choosingBars"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Recommended"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Placeholder for Main Content -->
    <FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recommendedText"
        android:layout_above="@id/bottomButtons" />

    <!-- Bottom Navigation Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#DDDDDD"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <!-- Discover Button -->
        <ImageButton
            android:id="@+id/discoverButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Discover"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_compass" />

        <!-- Profile Button -->
        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Profile"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_myplaces" />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpCenterActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/your_color"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Help Center" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Use Wanderly"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_condensed_black"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Wanderly! Here's a quick guide to get you started:"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Discover Places: Use the main screen to find places around you. Select categories like 'Churches', 'Museums', etc., and tap the search button."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Search Options: In your profile, you can set a search radius (in km) and choose whether to search from your current location or pick a location on the map."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Favorites: Tap the star icon on any place card to add it to your favorites. You can view your saved favorites from the bottom navigation bar."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Recommendations: Based on your preferences (set via the 'Add / Change Preferences' button in your profile) and general popular places, the main screen will show recommendations when no categories are selected."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Profile Management: Change your password or delete your account from the options in your profile page."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Feedback &amp; Sources: We value your input! Use the 'Leave Feedback' button. Check out the 'Sources' button to see where our app data comes from."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enjoy exploring with Wanderly!"
                android:textSize="16sp"
                android:textStyle="italic"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout> 